<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Life_is_well" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    /*Custom style for home page */

    <style name="Button.Meditations" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorMeditationButtons</item>
    </style>

    <style name="Theme.Life_is_well_home" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryHome</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLightHome</item>
        <item name="colorOnPrimary">@color/colorWhiteHome</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentHome</item>
        <item name="colorSecondaryVariant">@color/colorAccentHome</item>
        <item name="colorOnSecondary">@color/colorBlackHome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    /*Custom style for ??? page */

    <style name="Theme.Life_is_well.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Life_is_well.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Life_is_well.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    /*Custom style for mental page */

    <style name="Theme.Life_is_well_mental" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/colorBackgroundHome</item>
        <item name="colorSurfaceInverse">@color/colorMentalHome</item>
        <item name="colorPrimary">@color/colorMentalHome</item>
        <item name="colorPrimaryVariant">@color/colorMentalHome</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentHome</item>
        <item name="colorSecondaryVariant">@color/colorAccentHome</item>
        <item name="colorOnSecondary">@color/colorBlackHome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    /*Custom style for finance page */

    <style name="Theme.Life_is_well_finance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/colorBackgroundHome</item>
        <item name="colorSurface">@color/colorFinanceHome</item>
        <item name="colorOnSurface">@color/colorHealthHome</item>
        <item name="colorSurfaceInverse">@color/colorMentalHome</item>
        <item name="colorPrimary">@color/colorFinanceHome</item>
        <item name="colorPrimaryVariant">@color/colorFinanceHome</item>
        <item name="colorOnPrimary">@color/colorWhiteHome</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentHome</item>
        <item name="colorSecondaryVariant">@color/colorAccentHome</item>
        <item name="colorOnSecondary">@color/colorBlackHome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--this attribute is to change the theme of the normal FAB-->
    </style>

    /*Custom style for health page */

    <style name="Theme.Life_is_well_health" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/colorBackgroundHome</item>
        <item name="colorOnSurface">@color/colorHealthHome</item>
        <item name="colorPrimary">@color/colorHealthHome</item>
        <item name="colorPrimaryVariant">@color/colorHealthHome</item>
        <item name="colorOnPrimary">@color/colorWhiteHome</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentHome</item>
        <item name="colorSecondaryVariant">@color/colorAccentHome</item>
        <item name="colorOnSecondary">@color/colorBlackHome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PreferenceTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/colorBackgroundHome</item>

    </style>

    <!-- Style to make square components have rounded corners -->
    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>


    <!-- Custom style for Goals page -->
    <style name="GoalPageMain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/inputBackground</item>
        <item name="colorPrimaryVariant">@color/inputBackground</item>
        <item name="colorOnPrimary">@color/colorPrimaryHome</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccentHome</item>
        <item name="colorSecondaryVariant">@color/colorAccentHome</item>
        <item name="colorOnSecondary">@color/colorBlackHome</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/inputBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Goal Page dialog theme -->
    <style name="Theme_Goal_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.Custom" parent="@style/Theme.Life_is_well">
        <item name="darktheme"> @color/colorPrimaryDarkHome</item>
    </style>
</resources>
